<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/login_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="45sp"
            android:layout_marginRight="45sp"
            android:fontFamily="@font/titillium_web_semibold"
            android:text="Ayo Bergabung!"
            android:textColor="@color/colorBtnBlock"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45sp"
            android:layout_marginRight="45sp"
            android:fontFamily="@font/open_sans"
            android:text="Rasakan kemudahan jual beli hasil perkebunan dan pertenakan lokal."
            android:textAlignment="center"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_akun_login"
                android:fontFamily="@font/titillium_web_semibold"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#707070"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_daftar"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_login"
                android:fontFamily="@font/titillium_web_semibold"
                android:text="Daftar Akun"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>