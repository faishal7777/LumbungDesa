<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="126dp"
            android:layout_height="80dp"
            android:src="@drawable/img_barang"
            android:scaleType="centerCrop"
            app:riv_corner_radius="6dp"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="36dp"
            android:layout_height="80dp"
            android:background="@drawable/edittext_keranjang"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MacBook Pro 12 inch tahun 2017"
        android:textSize="16sp"
        android:fontFamily="@font/open_sans"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 20.700.000"
        android:textSize="16sp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/colorBlueDark"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_keranjang"
            android:text="-"
            android:textColor="#8B8B8B"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_keranjang"
            android:gravity="center"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16dp"
                android:textColor="#000"
                android:fontFamily="@font/open_sans"/>
        </LinearLayout>
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_keranjang"
            android:text="+"
            android:textColor="#8B8B8B"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C1C1C1"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Subtotal"
            android:textColor="#000"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Rp 20.700.000"
            android:textColor="#000"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semibold"/>
    </LinearLayout>
    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_login"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Lanjutkan ke Pembayaran"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_akun_login"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Tambah Produk Lain"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="#707070" />
</LinearLayout>