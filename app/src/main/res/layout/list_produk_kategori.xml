<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/item_kategori"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:layout_margin="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/productImageKategori"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@color/shimmer"
                android:background="@color/shimmer"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/productNameKategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sayur Kubis"
                    android:textSize="16sp"
                    android:fontFamily="@font/titillium_web_bold"
                    android:textColor="@color/textBlueDark"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/productPriceKategori"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Rp 4.000"
                    android:textSize="12sp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/colorBtnBlock"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>