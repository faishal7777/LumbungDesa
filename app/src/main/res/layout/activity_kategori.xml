<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KategoriActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvKategori"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:visibility="gone"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_Kategori_Empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:padding="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_kategori"/>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OOPS"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="20sp"
                android:textColor="@color/colorBlueDark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori ini sedang kosong nih."
                android:fontFamily="@font/open_sans"
                android:textSize="14sp"
                android:textColor="#707070"/>
            <Button
                android:id="@+id/btn_Kategori_Empty"
                android:layout_width="238dp"
                android:layout_height="40dp"
                android:layout_marginTop="49dp"
                android:background="@drawable/btn_login"
                android:text="BALIK BERANDA"
                android:fontFamily="@font/titillium_web_bold"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>