<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/item_beranda"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgProductRecycle"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@color/shimmer"
                android:background="@color/shimmer"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/productNameRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_shimmer_text"
                    android:textSize="12sp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/textBlueDark"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/productPriceRecycle"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_shimmer_text"
                    android:textSize="12sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/colorBtnBlock"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>